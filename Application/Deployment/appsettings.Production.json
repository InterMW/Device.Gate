{
    "Application": {
        "Name": "Device.Gate",
        "Version": "0.0.0.0"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Mqtt":
    {
       "User": "#{MQTT_USER}",
       "Password": "#{MQTT_PASS}",
       "Host": "#{MQTT_HOST}"
    },
    "Rabbit": {
        "ClientDeclarations": {
            "Connections": [
                {
                    "Name": "Connection",
                    "ClientName": "Device.Gate",
                    "ServerName": "10.0.0.215",
                    "UserName": "#{RABBIT_USER}",
                    "Password": "#{RABBIT_PASSWORD}"
                }
            ],
            "Publishers": [
                {
                    "Name": "PlaneFrameMessage",
                    "Connection": "Connection",
                    "Exchange": "InterTopic"
                },
                {
                    "Name": "MetricMessage",
                    "Connection": "Connection",
                    "Exchange": "amq.topic"
                }
            ]
        },
        "ServerDeclarations": {
            "Exchanges": [
                {
                    "Name": "InterTopic",
                    "Type": "Topic",
                    "AutoDelete": "False",
                    "Durable": "True",
                    "Connection": "Connection"
                }
            ],
        }
    }
}
